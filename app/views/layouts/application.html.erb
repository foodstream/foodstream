  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

<div >
  <% if session[:user_id] %>
    <%= link_to "Logout", { controller: "sessions", action: "logout" } %>
